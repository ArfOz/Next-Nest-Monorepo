{
	"singleQuote": true,
	"useTabs": true,
	"trailingComma": "none",
	"endOfLine": "auto",
	"semi": true,
	"bracketSpacing": true,
	"overrides": [
		{
			"files": ["*.js", "*.ts", "*.jsx", "*.tsx", "*.mjs", "*.cjs"],
			"options": { "tabWidth": 4 }
		},
		{
			"files": ["*.json", "*.html", "*.yaml", "*.yml"],
			"options": { "tabWidth": 2 }
		}
	]
}
