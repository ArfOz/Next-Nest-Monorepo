{
  "singleQuote": true,
  "useTabs": false,
  "trailingComma": "all",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": ["*.js", "*.ts", "*.jsx", "*.tsx", "*.mjs", "*.cjs"],
      "options": { "tabWidth": 4 }
    },
    {
      "files": ["*.json", "*.html", "*.yaml", "*.yml"],
      "options": { "tabWidth": 2 }
    }
  ]
}
