// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Restaurants {
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  name String
  lat  String?
  lon  String?
}

model Comments {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  restaurant_id String
  name          String
  comment       String
  stars         Int
}
