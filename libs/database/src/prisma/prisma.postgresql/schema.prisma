generator client {
    provider = "prisma-client-js"
    output   = "../../../../../node_modules/@prisma/postgres/client"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRESQLDB_DATABASE_URL")
}

model User {
    id       String    @id @default(uuid())
    username String
    password String
    email    String
    created  DateTime  @default(now())
    posts    Comment[] @relation("author")

    Comment   Comment? @relation(fields: [commentId], references: [id])
    commentId String?
}

model Comment {
    id           String   @id @default(uuid())
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
    title        String   @db.VarChar(255)
    comment      String
    star         Int
    restaurantId String
    // restaurant   Restaurant @relation(fields: [restaurantId], references: [id])

    likedBy User?    @relation("author", fields: [likedId], references: [id])
    likedId String[]
    User    User?    @relation("likes", fields: [userId], references: [id])
    userId  String?
    User    User[]
}

